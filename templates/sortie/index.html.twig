{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block body %}
    <div class="index_Sortie">
        <h1>Sortie index</h1>

        <h2 class="filter_title">Filtre</h2>
        <form class="search" action="{{ path('app_sortie_index') }}" method="get">
            <div class="div1">
                <div>
                    <label for="campus">Campus</label>
                    <select name="campus" id="campus">
                        <option hidden="hidden">Choisissez un campus</option>
                        {% for campus in campuses %}
                            <option value="{{ campus.id }}">{{ campus.nom }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label for="search">Le nom de la sortie contient :</label>
                    <input type="text" name="search" id="search" placeholder="Rechercher une sortie">
                </div>
                <div>
                    Entre <input type="date" name="date1" id="date1">
                    et <input type="date" name="date2" id="date2">
                </div>
            </div>
            <div class="div2">
                <input type="checkbox" name="orga" id="orga" value="{{ app.user.id }}" checked> Sorties dont je suis l'organisateur/trice
                <br>
                <input type="checkbox" name="inscrit" id="inscrit" value="{{ app.user.id }}"> Sorties auxquelles je suis inscrit/e
                <br>
                <input type="checkbox" name="noinscrit" id="noinscrit" value="{{ app.user.id }}"> Sorties auxquelles je ne suis pas inscrit/e
                <br>
                <input type="checkbox" name="passe" id="passe"> Sorties passées
            </div>
            <div class="submit_div">
                <button class="submit" type="submit">Rechercher</button>
            </div>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th>Numéro</th>
                    <th>Nom</th>
                    <th>Date de la sortie</th>
                    <th>Clôture</th>
                    <th>inscrits/places</th>
                    <th>Etat</th>
                    <th>Inscrit ?</th>
                    <th>Organisateur</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for sortie in sorties %}
                    {% if sortie.Etat.libelle == 'En Création' and sortie.organisateur.id != app.user.id %}

                    {% else %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ sortie.nom }}</td>
                            <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('Y-m-d') : '' }}</td>
                            <td>{{ sortie.Participant|length }}/{{ sortie.nbInscriptionsMax }}</td>
                            <td>{{ sortie.Etat.libelle }}</td>
                            <td>
                                {% for participant in sortie.Participant %}
                                    {% if participant.id == app.user.id %}
                                        X
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td><a href="#">{{ sortie.organisateur.pseudo }}</a></td>
                            <td>
                                {% if sortie.Etat.libelle == 'Ouvert' %}
                                    {% for participant in sortie.Participant %}
                                        {% if participant.id == app.user.id %}
                                            <a href="{{ path('app_sortie_show', {'id': sortie.id}) }}">Afficher</a>
                                            -
                                            <a href="{{ path('app_sortie_seDesister', {'id': sortie.id}) }}">Se désister</a>
                                        {% elseif loop.first and loop.last %}
                                            <a href="{{ path('app_sortie_show', {'id': sortie.id}) }}">Afficher</a>
                                            -
                                            <a href="{{ path('app_sortie_inscription', {'id': sortie.id}) }}">S'inscrire</a>
                                        {% endif %}
                                    {% else %}
                                        {% if sortie.organisateur.id == app.user.id %}
                                            <a href="{{ path('app_sortie_show', {'id': sortie.id}) }}">Afficher</a>
                                            -
                                            <a href="{{ path('app_sortie_inscription', {'id': sortie.id}) }}">Annuler</a>
                                        {% else %}
                                            <a href="{{ path('app_sortie_show', {'id': sortie.id}) }}">Afficher</a>
                                            -
                                            <a href="{{ path('app_sortie_inscription', {'id': sortie.id}) }}">S'inscrire</a>
                                        {% endif %}
                                    {% endfor %}
                                {% elseif sortie.Etat.libelle == 'Fermée' %}
                                    {% for participant in sortie.Participant %}
                                        {% if participant.id == app.user.id %}
                                            <a href="{{ path('app_sortie_show', {'id': sortie.id}) }}">Afficher</a>
                                            -
                                            <a href="{{ path('app_sortie_seDesister', {'id': sortie.id}) }}">Se désister</a>
                                        {% elseif loop.first and loop.last %}
                                            <a href="{{ path('app_sortie_show', {'id': sortie.id}) }}">Afficher</a>
                                        {% endif %}
                                    {% else %}
                                        {% if sortie.organisateur.id == app.user.id %}
                                            <a href="{{ path('app_sortie_show', {'id': sortie.id}) }}">Afficher</a>
                                            -
                                            <a href="{{ path('app_sortie_edit', {'id': sortie.id}) }}">Modifier</a>
                                        {% else %}
                                            <a href="{{ path('app_sortie_show', {'id': sortie.id}) }}">Afficher</a>
                                        {% endif %}
                                    {% endfor %}
                                {% elseif sortie.Etat.libelle == 'En Cours' %}
                                    <a href="{{ path('app_sortie_show', {'id': sortie.id}) }}">Afficher</a>
                                {% elseif sortie.Etat.libelle == 'En Création' %}
                                    <a href="{{ path('app_sortie_edit', {'id': sortie.id}) }}">Modifier</a>
                                    -
                                    <a href="{{ path('app_sortie_publier', {'id': sortie.id}) }}">Publier</a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endif %}
                {% else %}
                    <tr>
                        <td colspan="9">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_sortie_new') }}">Create new</a>
    </div>
{% endblock %}
