{% extends 'base.html.twig' %}

{% block title %}Campus index{% endblock %}

{% block body %}
    <div class="index_Campus">
    <h1>Campus index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Campus</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for campus in id %}
            <tr>

                <td>{{ campus.nom }}</td>
                <td>
                    <a href="{{ path('app_campus_show', {'id': campus.id}) }}">show</a>
                    <a href="{{ path('app_campus_edit', {'id': campus.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_campus_new') }}">Create new</a>
    </div>
{% endblock %}
