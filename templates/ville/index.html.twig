{% extends 'base.html.twig' %}

{% block title %}Liste des villes{% endblock %}


{% block body %}
    <div class="index_Ville">
        <h1>Liste des villes</h1>
        {#  Recherche d'une ville (par nom ou code postal dans la liste #}
        <p>Le nom contient :</p>

        {#  Affichage de la liste des villes #}
        <table>
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>CodePostal</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for ville in villes %}
                <tr>
                    {# DÃ©tails de la ville #}
                    <td>
                        {% if loop.last %}
                            {{ form_row(villeForm.nom) }}
                        {% else %}
                            <a href="{{ path('app_ville_show', {'id': ville.id}) }}">{{ ville.nom }}</a>
                        {% endif  %}
                    </td>
                    <td>
                        {% if loop.last %}
                            {{ form_row(villeForm.codePostal) }}
                        {% else %}
                            {{ ville.codePostal }}
                        {% endif  %}
                    </td>
                    <td>
                        {# Modifier la ville #}
                        {% if not loop.last %}
                            <a href="{{ path('app_ville_edit', {'id': ville.id}) }}">Modifier</a>
                            {# Supprimer la ville #}
                        <a href="{{ path('app_ville_delete', {'id': ville.id}) }}">Supprimer</a>
                            {% else %}
                                {{ include('ville/_form.html.twig') }}
                       {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}





