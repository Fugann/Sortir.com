
<div class="delete_ville">
    <p>Nom : {{ ville.nom }}</p>
    <p>Code Postal : {{ ville.codePostal }}</p>
</div>

<form method="post" action="{{ path('app_ville_delete',
    {'id': ville.id}) }}"

      onsubmit="return confirm('Etes-vous certain de vouloir supprimer cette ville ?');">

    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ville.id) }}">

    <button class="btn">Supprimer</button>

</form>

